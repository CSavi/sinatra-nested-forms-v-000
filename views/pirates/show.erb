<h1>Pirate</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3>
  <h3>Weight: <%= @pirate.weight %> pounds</h3>
  <h3>Height: <%= @pirate.height %> inches</h3>
</div>


<h2>First Ship</h2>
  <div class="ship">
    <p>Name: <%= @ships[0].name %></p><br>
    <p>Type: <%= @ships[0].type %></p><br>
    <p>Booty: <%= @ships[0].booty %></p><br>
  </div>

<h2>Second Ship</h2>
  <div class="ship">
